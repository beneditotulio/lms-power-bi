@model IEnumerable<SGBWeb.Models.Author>

@{
    ViewBag.Title = "Index";
}

<h2 class="btn-info">Lista de Autores</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountryOfOrigin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Biography)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Website)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryOfOrigin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Biography)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.ID }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>


<div class="btn-group-sm">
    @Ajax.ActionLink(" Importar", "ImportAuthors", "Authors",
    new { },
    new AjaxOptions
    {
        UpdateTargetId = "openmodal",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "onImport()",
    }, new
         {
             @id = "importExcel",
             @class = "btn btn-sm btn-outline-success fa fa-plus-circle",
             @rel = "tooltip",
             @title = "Importar Plano de contas",
             @style = "float: left"
    })
    <span class="text-light" style="float: left">  | </span>
</div>

<div id="openmodal"></div>

<script type="text/javascript">
    function onImport() {
        $('#import').modal('show');
    }
</script>