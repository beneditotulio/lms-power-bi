@model IEnumerable<SGBWeb.Models.Bookcase>

@{
    ViewBag.Title = "Index";
}

<h2 class="btn-info">Lista de Estantes</h2>

    <a class="btn btn-sm btn-success fa fa-plus-circle" href="@Url.Action("Create")">
        Criar
    </a>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookcaseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookcaseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.BookcaseID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.BookcaseID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.BookcaseID })
        </td>
    </tr>
}

</table>
