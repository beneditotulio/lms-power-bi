@model IEnumerable<SGBWeb.Models.Member>

@{
    ViewBag.Title = "Index";
    string errorMessage = TempData["errorMessage"] as string;
    string successMessage = TempData["successMessage"] as string;
}
<div class="container-fluid">

    <div class="text-center" style="align-content:center" id="ErrorMessageDisplay">

        @if (errorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" style="position:center">

                <span>
                    <b> Falha - </b>@errorMessage
                </span>
            </div>

        }
        @if (successMessage != null)
        {
            <div class="alert alert-success alert-dismissible fade show">

                <span>
                    <b> Successo - </b>@successMessage
                </span>
            </div>

        }
        @if (Model.Count() == 0)
        {
            <div class="alert alert-info alert-dismissible fade show">

                <span>
                    <b> Info! - </b> Nenhum registo adicionado até o momento.
                </span>
            </div>
        }
    </div>

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action(actionName: "Dashboard", controllerName: "Home")">Dashboard</a></li>
        <li class="breadcrumb-item active">Membros</li>
    </ol>

    <div class="card">
        <div class="card-header">
            <h2 class="btn-info">Lista de Membros</h2>
        </div>
        <div class="card-body">
            <table class="table table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("Nome")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nationality)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nuit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MemberType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.DateCreate)
                        </th>*@
                        @*<th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>*@
                        <th>Acções</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td scope="col">
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td scope="col">
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td scope="col">
                                @Html.DisplayFor(modelItem => item.Nationality)
                            </td>
                            <td scope="col">
                                @Html.DisplayFor(modelItem => item.Nuit)
                            </td>
                            <td scope="col">
                                @Html.DisplayFor(modelItem => item.MemberType)
                            </td>
                            <td scope="col">
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td scope="col">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td scope="col">
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            @*<td scope="col">
                                @item.DateCreate.ToString("dd-mm-yyyy")
                            </td>*@
                            @*<td scope="col">
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>*@
                        <td>
                            @*<a href="@Url.Action("Edit", new {id = Url.Encode(item.MemberID)})" class="fa fa-edit" title="Editar Membro"></a> |*@
                            <a href="/Members/Edit?id=@item.MemberID" class="fa fa-edit" title="Editar Membro"></a>|                            |
                            <a href="/Members/Details?id=@item.MemberID" class="fa fa-list" title="Detalhes Membro"></a> |
                            <a href="/Members/Delete?id=@item.MemberID"  class="fa fa-trash" title="Eliminar Membro"></a>
                        </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <div class="btn-group-sm">
                <a class="btn btn-sm btn-success" href="@Url.Action("Create")">
                    Criar
                    <i class="fa fa-plus-circle"></i>
                </a>
                <span class="text-light" style="float: left">  | </span>
            </div>
        </div>
    </div>

</div>

<div id="openmodal"></div>

<script type="text/javascript">
    //function onImport() {
    //    $('#import').modal('show');
    //}
    $(document).ready(function () {

        var table = $('#dataTable').DataTable({
            paginate: true,
            autoWidth: false,
            select: true,
            //Necessario desativar o scrollX e scrollY para acertar o header com o body.
            //scrollResize: true,
            //scrollY: 300
            "pagingType": "full_numbers",
            "lengthMenu": [
                [10, 25, 50, -1],
                [10, 25, 50, "All"]
            ],
            responsive: true,
            language: {
                search: "_INPUT_",
                searchPlaceholder: "Procurar ...",
            }
        });

        $('#dataTable tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            }
            else {
                table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
            }
        });

    });
</script>
